<!-- views/reminder.ejs -->
<!doctype html>
<html lang="fr">
<head>
    <% include ../partials/head %>
</head>
<body>

   <% include ../partials/navbar %>

<div class="container hero-unit" id="reminder">
    <div class="row-fluid">
        <div class="span12">
            <h2 class="text-center">Donnez des nouvelles Ã  <%=otherusername%></h2>
        </div>
    </div>

    <div class="row-fluid">
        <div class="span4 offset4 text-center">
            <hr>
            <form id="remindform" action="/newreminder/<%=loanid%>" method="post">
                <div class="form-group">
                    <fieldset>

                        <% if (messageMail.length > 0) { %>
                            <div class="alert alert-danger" id="dangerMail"><%= messageMail %></div>
                        <% } %>

                        <label>mail de <%=otherusername%>: </label>
                        <input type="text" placeholder="mail de <%=otherusername%>" id="inputothermail" name="inputothermail" class="form-control"" 
                            <% if(othermail.length > 0)
                            { %>
                                value="<%=othermail%>"
                            <%}%>
                            >
                
                        <% if (messageContent.length > 0) { %>
                            <div class="alert alert-danger" id="dangerContent"><%= messageContent %></div>
                        <% } %>

                        <textarea name="inputremindermsg" rows="5" id="inputremindermsg" class="input-xlarge"><%=mailcontent%></textarea>
                        
                    </fieldset>
                    <button type="submit" id="submitReminderButton" class="btn btn-info">Envoi du rappel</button>
                </div>
            </form>
        </div>
    </div>
</div>

<footer>
    <% include ../partials/footer %>
</footer>

    <% include ../partials/scripts %>

</body>
</html>