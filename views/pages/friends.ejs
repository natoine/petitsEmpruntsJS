<!-- views/friends.ejs -->
<!doctype html>
<html lang="fr">
<head>
    <% include ../partials/head %>
</head>
<body>

   <% include ../partials/navbar %>

	<div class="container hero-unit" id="mainAction">

            <div class="row-fluid">
                <div class="span12">
                    
                    <% include ../partials/messages %>

                    <h2 class="text-center">Vos <%= friendlist.length %> amis :</h2>
                </div>
            </div>

            <div class="row-fluid">
            	<div class="span8">
            		<table id="friendstable" class="table table-striped">
                        <tbody id="friends">
                        	<% for( i = 0; i < friendlist.length ; i+=1) { %>
                        		<tr id="<%=friendlist[i]._id%>">
                        			<td><%=friendlist[i].friendname%></td>
                        			<td><%=friendlist[i].friendmail%></td>
                        			<td><%=friendlist[i].friendid%></td>
                        		</tr>
                        	<% } %>
                        </tbody>
                    </table>
            	</div>
            </div>
	</div>

<footer>
    <% include ../partials/footer %>
</footer>

    <% include ../partials/scripts %>

</body>
</html>
