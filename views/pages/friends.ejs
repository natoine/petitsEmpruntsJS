<!-- views/friends.ejs -->
<!doctype html>
<html lang="fr">
<head>
    <% include ../partials/head %>
</head>
<body>

   <% include ../partials/navbar %>

	<div class="container hero-unit" id="mainAction">

            <div class="row-fluid">
                <div class="span12">
                    
                    <% include ../partials/messages %>

                    <h2 class="text-center">Vos <%= friendlist.length %> amis :</h2>
                </div>
            </div>

            <div class="row-fluid">
            	<div class="span8">
            		<ul id="friendstable">
                        	<% for( i = 0; i < friendlist.length ; i+=1) { %>
                        		<li id="<%=friendlist[i]._id%>">
                        			<form action="/updatefriend/<%=friendlist[i]._id%>" method="post">
	                        			<input type="text" class="form-control" name="newfriendname" placeholder="<%=friendlist[i].friendname%>">
	                        			<input type="text" class="form-control" name="newfriendmail" placeholder="<%=friendlist[i].friendmail%>">
                                        Nom de compte utilisateur : <%=friendlist[i].friendusername%>
	                        			<%=friendlist[i].frienduserid%>
	                        			<button type="submit" class="btn btn-info btn-lg">Modifier</button>
                        		    </form>
                        		</li>
                        	<% } %>
                    </ul>
            	</div>
            </div>
	</div>

<footer>
    <% include ../partials/footer %>
</footer>

    <% include ../partials/scripts %>

</body>
</html>
