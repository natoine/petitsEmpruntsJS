<!-- views/pwdrecoverylink.ejs -->
<!doctype html>
<html lang="fr">
<head>
    <% include ../partials/head %>
</head>
<body>

    <% include ../partials/nolognavbar %>

<div class="container hero-unit">

    <div class="row-fluid">
        <div class="span12">
            <h1 class="text-center">Changer le mot de passe</h1>
        </div>
    </div>

    <div class="span4 offset4">
        <hr>

        <!-- show any messages that come back with pwdrecoverylinks -->
        <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <!-- PWD CHANGE FORM -->
        <form action="/pwdchangerecovery" method="post">
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="nouveau mot de passe">
                <input type="hidden" name="email" value="<%= email %>">
                <input type="hidden" name="token" value="<%= token %>">
            </div>

            <button type="submit" class="btn btn-info btn-lg">Changer le mot de passe</button>
        </form>

        <hr>

        <p><small><a href="/">home</a></small></p>

    </div>

</div>

<footer>
    <% include ../partials/footer %>
</footer>

    <% include ../partials/scripts %>

</body>
</html>