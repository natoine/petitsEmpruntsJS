<!-- views/admin/users.ejs -->
<!doctype html>
<html lang="fr">
<head>
    <% include ../partials/head %>
</head>
<body>

   <% include ../partials/navbar %>

<div class="container hero-unit">
    
    <div class="span12">
        <h3 class="text-center">Liste des <%=users.length%> utilisateurs</h3>

        <% include ../partials/messages %>
        
    </div>

    <div class="row-fluid" id="users">
    
        <!-- USERS LIST -->
        <div>
            <div class="well">
                <table id="usersList" class="table table-striped">
                    <% for( i = 0; i < users.length ; i+=1) { %>
                    <tr id="user<%= users[i]._id %>">
                        <td><%=users[i].local.username%></td>
                        <td>
                            <%if(users[i].isActivated()) {%>
                                <form action="/admin/deactivateuser/<%=users[i]._id%>" method="post">
                                    <button type="submit" class="btn btn-success" title="will deactivate user">activated</button>
                                </form>
                            <%} else {%>
                            <form action="/admin/activateuser/<%=users[i]._id%>" method="post">
                                    <button type="submit" class="btn btn-danger" title="will activate user">not activated</button>
                                </form>
                            <% } %>
                        </td>
                        <td><%=users[i].local.email%></td>
                        <td>fb : <%=users[i].facebook.email%></td>
                        <td>fb : <%=users[i].facebook.name%></td>
                        <td>gg : <%=users[i].google.email%></td>
                        <td>gg : <%=users[i].google.name%></td>
                        <%if(users[i].local.username !== username) {%>
                            <td><button class="btn btn-danger btndelete" id="deleteuser<%= users[i]._id %>"><i class="icon-remove icon-white"></i></button></td>
                        <%}
                        else
                        {
                        %>
                        <td></td>
                        <%}%>
                        <td><a href="/admin/loans/<%= users[i]._id %>">emprunts</a></td>
                    </tr>
                    <% } %>
                </table>
            </div>
        </div>
    </div>

</div>

<footer>
    <% include ../partials/footer %>
</footer>

    <% include ../partials/scripts %>

        <script src="/admin.js"></script>

</body>
</html>
