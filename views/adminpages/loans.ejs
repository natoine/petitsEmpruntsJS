<!-- views/admin/users.ejs -->
<!doctype html>
<html lang="fr">
<head>
    <% include ../partials/head %>
</head>
<body>

   <% include ../partials/navbar %>

<div class="container hero-unit">
    
    <div class="span12">
        <h3 class="text-center">Liste des <%=loans.length%> emprunts</h3>
        
        <% include ../partials/messages %>

    </div>

    <div class="row-fluid" id="loans">
        <!-- LOANS LIST -->
        <div>
            <div class="well">
                <table id="loansList" class="table table-striped">
                    <% for( i = 0; i < loans.length ; i+=1) { %>
                    <tr id="loan<%= loans[i]._id %>">
                        <td>créé par : <%=loans[i].creator%></td>
                        <td>depuis : <%=loans[i].when%></td>
                        <td>prêteur : <%=loans[i].loaner%></td>
                        <td>emprunteur : <%=loans[i].borrower%></td>
                        <td>quoi ? : <%=loans[i].what%></td>
                        <td>Last remind : <%=loans[i].lastreminder%></td>
                    </tr>
                    <% } %>
                </table>
            </div>
        </div>
    </div>

</div>

<footer>
    <% include ../partials/footer %>
</footer>

    <% include ../partials/scripts %>

</body>
</html>
